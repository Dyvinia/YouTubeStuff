<Window x:Class="YouTubeStuff.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeStuff"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        Background="Transparent" 
        AllowsTransparency="True"
        Cursor="Wait"
        Title="DownloadWindow" Height="100" Width="400">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    <Grid Background="#FF2D2D2D">
        <Grid Margin="5,5,5,5" Background="#FF141414">
            <TextBlock Text="Downloading Libraries" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ProgressBar Name="pbStatus" Height="5" Maximum="1" VerticalAlignment="Bottom" Background="Transparent" Foreground="White" BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
